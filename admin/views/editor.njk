{% extends 'layout.njk' %}
{% block content %}
  <div class="w90 mb-4">
    <h1 class="center">{{title}}</h1>
    <div class="row">
      <div class="col-md-4">
        <div class="editorInputs"></div>

        <div id="fileTree">
          <ul id="adminEditorList">
            <h3>Admin</h3>
          </ul>

          <ul id="appEditorList">
            <h3>App</h3>
          </ul>

        {% if config.app.compiler !== (false) %}
          <ul id="compilerEditorList">
            <h3>{{config.app.compiler|capitalize}}</h3>
          </ul>
        {% endif %}

        </div>
      </div>
      <div class="col-md-8">
        <div id="MD"></div>
        <div id="ctrl" class="settingBtns mt-4 row"></div>
      </div>
    </div>
  </div>
{% endblock %}
{%block scripts%}
  {{macro.js(s="functions")}}
  <script>
    var MD = ace.edit("MD"),
      postEditorsObj = [
        {
          "id": MD,
          "type": "html",
          "key2": "k"
        }
      ];
    buildEditorInput();
    initEditor();
    createPostBtn(config.editorBtn);
    disableBtn("#commit");
    mdEvents();
    getEditorFiles();
    commitEditorData();
  </script>
{% endblock %}
