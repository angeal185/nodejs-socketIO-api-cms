{% import "macros/macros.njk" as macro %}
<!DOCTYPE html>
<html lang="{{config.app.lang}}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    {% for item in config.styles %}
      {{macro.css(i=item)}}
    {% endfor %}
  </head>
  <body>
    {% block content %}{% endblock %}
    {% for item in config.scripts %}
      {{macro.js(i=item)}}
    {% endfor %}
  </body>
</html>
